<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".RegisterActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idWrite"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="ID"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/idText"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="아이디" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/passwordWrite"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="PW"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/passwordText"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="비밀번호" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/nameWrite"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="이름"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/nameText"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="이름" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/emailWrite1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="3"
            android:text="Email"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/emailText1"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="example1" />

        <TextView
            android:id="@+id/emailWrite2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="\@"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/emailText2"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="example.com" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/phWrite1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:text="전화번호"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/phText1"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="010"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/phWrite2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="-"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/phText2"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="0000"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/phWrite3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="-"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/phText3"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="0000"
            android:textAlignment="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/genderWrite"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:text="성별"
            android:textAlignment="center"></TextView>

        <Spinner
            android:id="@+id/genderSpinner"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:entries="@array/gender">
        </Spinner>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/birthWrite1"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="6"
            android:text="생년월일"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/birthText1"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="0000"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/birthWrite2"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="년"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/birthText2"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="00"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/birthWrite3"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="월"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/birthText3"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="00"
            android:textAlignment="center"/>

        <TextView
            android:id="@+id/birthWrite4"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="일"
            android:textAlignment="center"></TextView>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/addressWrite"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="2"
            android:text="주소"
            android:textAlignment="center"></TextView>

        <EditText
            android:id="@+id/addressText"
            android:layout_width="0dp"
            android:layout_height="50dp"

            android:layout_weight="10"
            android:hint="주소"
            android:textAlignment="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/registerButton"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="회원가입"/>

    </LinearLayout>
</LinearLayout>

